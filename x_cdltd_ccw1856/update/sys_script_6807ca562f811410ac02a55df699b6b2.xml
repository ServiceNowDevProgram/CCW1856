        if (current.getValue(checkFields[i])) {
			gs.info("Counter Value : AAshish " + current.getValue(checkFields[i]));
            counter++;
        }
    }
    if (threshhold > counter) {
        current.setAbortAction(true);
        gs.addErrorMessage("You need at least " + threshhold + " number of instances");
    }

})(current, previous);]]></script>
